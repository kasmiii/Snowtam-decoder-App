<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/map_relative_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MapsActivity"
    >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:context=".MapsActivity" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/map"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blueCustom"
            >

            <TextView
                android:id="@+id/aerodrome_name_activity_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aeroport :"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/map_activity_aerodrome_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="10dp"
                android:text="aerodrome_name"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:id="@+id/latitude_activity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude : "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/aerodrome_name_activity_map_text"
                android:textColor="@color/colorWhite"

                />

            <TextView
                android:id="@+id/longitude_activity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude : "
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/latitude_activity_text_view"
                />

            <TextView
                android:id="@+id/map_activity_longitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="40dp"
                android:text="longitude_here"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/map_activity_latitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/latitude_activity_text_view"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="11dp"
                android:text="latitude_here"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/next_observation_activity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pays : "
                android:textSize="18dp"
                android:layout_below="@+id/longitude_activity_text_view"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/nom_pays_activity_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pays"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"
                android:layout_below="@+id/map_activity_latitude_text"
                android:textColor="@color/colorWhite"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>
